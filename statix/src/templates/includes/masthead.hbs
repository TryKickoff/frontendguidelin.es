<header class="masthead" role="banner">

	{{#exists page.subtitle}}
	<h1 class="page-title">{{ page.title }}<span class="gamma page-title-sub">{{ page.subtitle }}</span></h1>
	{{else}}
	<h1 class="page-title">{{ page.title }}</h1>
	{{/exists}}

	{{#exists page.description}}
	<p>{{ page.description }}</p>
	{{/exists}}
</header>

